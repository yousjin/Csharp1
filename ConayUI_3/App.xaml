<Application x:Class="ConayUI_3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ConayUI_3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <SolidColorBrush x:Key="normalFontColor"
                         Color="DarkGray"/>
        <SolidColorBrush x:Key="normalRecColor"
                         Color="#FFF4F4F5"/>


        <Style TargetType="{x:Type Rectangle}" x:Key="myRecstyle">
            <Setter Property="Fill" Value="#FFF4F4F5"/>
            <Setter Property="RadiusX" Value="10"/>
            <Setter Property="RadiusY" Value="10"/>
        </Style>
    </Application.Resources>
</Application>
